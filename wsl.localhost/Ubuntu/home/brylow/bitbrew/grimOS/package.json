{
  "name": "grimos",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,js,jsx,json,css,scss}\" || echo \"Some files need formatting. Run 'pnpm format' to fix.\"",
    "format:fix-all": "node scripts/fix-formatting.js",
    "check-tools": "node scripts/check-linting-tools.js",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "postinstall": "npx patch-package -y"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-syntax-flow": "^7.27.1",
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
 "@jest/globals": "^29.7.0",
    "@opentelemetry/api": "1.7.0",
    "@opentelemetry/resources": "1.18.1",
    "@opentelemetry/sdk-node": "0.45.1",
    "@opentelemetry/sdk-trace-node": "1.18.1",
    "@opentelemetry/semantic-conventions": "1.18.1",
    "@playwright/test": "^1.52.0",
    "all-contributors-cli": "^6.26.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "fetch-mock": "^9.11.0",
    "gzip-size": "6.0.0",
    "mkdirp": "^3.0.1",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.3.2",
    "tsc": "^2.0.4",
    "typed-query-selector": "^2.12.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.1.0"
}